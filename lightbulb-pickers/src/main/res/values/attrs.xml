<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InputTriggerView">
        <attr name="itv_background_color" format="color" />
        <attr name="itv_stroke_color" format="color" />
        <attr name="itv_start_icon_color" format="color" />
        <attr name="itv_error_text_appearance" format="reference" />
        <attr name="itv_hint_text_appearance" format="reference" />
        <attr name="itv_icon_use_alpha" format="boolean" />
        <attr name="itv_layout_type" format="enum">
            <enum name="BOXED" value="1" />
            <enum name="OUTLINED" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ButtonTriggerView">
        <attr name="btv_background_color" format="color" />
        <attr name="btv_text_color" format="color" />
        <attr name="btv_background_corner_radius" format="integer" />
        <attr name="btv_start_icon_color" format="color" />
        <attr name="btv_error_text_appearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="ImageButtonTriggerView">
        <attr name="ibtv_background_color" format="color" />
        <attr name="ibtv_error_text_appearance" format="reference" />
        <attr name="ibtv_start_icon_color" format="color" />
    </declare-styleable>

    <declare-styleable name="PickerView">
        <attr name="pv_dialog_tag" format="string" />
        <attr name="pv_dialog_cancelable" format="boolean" />
        <attr name="pv_dialog_button_positive_text" format="string" />
        <attr name="pv_dialog_button_negative_text" format="string" />
        <attr name="pv_dialog_animation" format="enum">
            <enum name="fade" value="1" />
            <enum name="no_animation" value="2" />
            <enum name="transition_from_left_to_right" value="3" />
            <enum name="transition_from_top_to_bottom" value="4" />
            <enum name="transition_from_bottom_to_bottom" value="5" />
        </attr>
        <attr name="pv_dialog_title" format="string" />
        <attr name="pv_dialog_message" format="string" />
        <attr name="pv_dialog_type" format="enum">
            <enum name="NORMAL" value="1" />
            <enum name="FULLSCREEN" value="2" />
            <enum name="BOTTOM_SHEET" value="3" />
        </attr>
        <attr name="pv_dialog_button_text_color" format="color" />
        <attr name="pv_dialog_button_corner_radius" format="integer" />
        <attr name="pv_validation_enabled" format="boolean" />
        <attr name="pv_error_enabled" format="boolean" />
        <attr name="pv_required" format="boolean" />
        <attr name="pv_show_selected_text" format="boolean" />
        <attr name="pv_hint_text" format="string" />
        <attr name="pv_error_required_text" format="string" />
        <attr name="pv_error_text" format="string" />
    </declare-styleable>

    <declare-styleable name="DialogAdapterPickerView" />

    <declare-styleable name="DialogIconPickerView">
        <attr name="ipv_selected_icon_size" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DialogColorPickerView" />

    <declare-styleable name="DialogDatePickerView">
        <attr name="dpv_date_format" format="string" />
    </declare-styleable>

    <declare-styleable name="DialogDateRangePickerView">
        <attr name="drpv_text_from" format="string" />
        <attr name="drpv_text_to" format="string" />
        <attr name="drpv_date_format" format="string" />
    </declare-styleable>

    <declare-styleable name="DialogMonthPickerView">
        <attr name="mpv_min_year" format="integer" />
        <attr name="mpv_max_year" format="integer" />
        <attr name="mpv_date_format" format="string" />
    </declare-styleable>

    <declare-styleable name="DialogTimePickerView">
        <attr name="tpv_time_format" format="string" />
    </declare-styleable>

    <declare-styleable name="ChipsPickerView">
        <attr name="cpv_required" format="boolean" />
        <attr name="cpv_close_on_lost_focus" format="boolean" />
        <attr name="cpv_allow_to_add_new_options" format="boolean" />
        <attr name="cpv_hint_text" format="string" />
        <attr name="cpv_required_text" format="string" />
        <attr name="cpv_background_color" format="color" />
        <attr name="cpv_background_corner_radius" format="dimension" />
        <attr name="cpv_chip_group_padding" format="dimension" />
    </declare-styleable>
</resources>