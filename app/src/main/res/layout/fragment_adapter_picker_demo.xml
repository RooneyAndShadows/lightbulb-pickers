<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorActionBarBackground"
        app:contentInsetStart="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_layout"
        android:fillViewport="true"
        android:padding="15dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.rooneyandshadows.lightbulb.pickersdemo.views.DemoAdapterPickerView
                android:id="@+id/pickerViewBoxed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:APV_DialogMessage="@string/adapter_picker_dialog_subtitle_text"
                app:APV_DialogMode="NORMAL"
                app:APV_DialogTitle="@string/adapter_picker_dialog_title_text"
                app:PV_DialogAnimation="transition_from_left_to_right"
                app:PV_DialogButtonNegText="@string/picker_cancel_text"
                app:PV_DialogButtonPosText="@string/picker_ok_text"
                app:PV_DialogTag="DEMO_PICKER_TAG_BOXED"
                app:PV_HintText="@string/adapter_picker_pick_item_text"
                app:PV_Required="true"
                app:PV_RequiredText="@string/adapter_picker_required_text">

                <com.github.rooneyandshadows.lightbulb.pickers.dialog.trigger.InputTriggerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.github.rooneyandshadows.lightbulb.pickersdemo.views.DemoAdapterPickerView>

            <com.github.rooneyandshadows.lightbulb.pickersdemo.views.DemoAdapterPickerView
                android:id="@+id/pickerViewOutlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:APV_DialogMessage="@string/adapter_picker_dialog_subtitle_text"
                app:APV_DialogMode="NORMAL"
                app:APV_DialogTitle="@string/adapter_picker_dialog_title_text"
                app:PV_DialogAnimation="transition_from_left_to_right"
                app:PV_DialogButtonNegText="@string/picker_cancel_text"
                app:PV_DialogButtonPosText="@string/picker_ok_text"
                app:PV_DialogTag="DEMO_PICKER_TAG_OUTLINED"
                app:PV_HintText="@string/adapter_picker_pick_item_text"
                app:PV_Required="true"
                app:PV_RequiredText="@string/adapter_picker_required_text">

                <com.github.rooneyandshadows.lightbulb.pickers.dialog.trigger.InputTriggerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:ITV_LayoutType="OUTLINED" />
            </com.github.rooneyandshadows.lightbulb.pickersdemo.views.DemoAdapterPickerView>

            <com.github.rooneyandshadows.lightbulb.pickersdemo.views.DemoAdapterPickerView
                android:id="@+id/pickerViewButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:APV_DialogMessage="@string/adapter_picker_dialog_subtitle_text"
                app:APV_DialogMode="NORMAL"
                app:APV_DialogTitle="@string/adapter_picker_dialog_title_text"
                app:PV_DialogAnimation="transition_from_left_to_right"
                app:PV_DialogButtonNegText="@string/picker_cancel_text"
                app:PV_DialogButtonPosText="@string/picker_ok_text"
                app:PV_DialogTag="DEMO_PICKER_TAG_OUTLINED"
                app:PV_HintText="@string/adapter_picker_pick_item_text"
                app:PV_Required="true"
                app:PV_RequiredText="@string/adapter_picker_required_text">

                <com.github.rooneyandshadows.lightbulb.pickers.dialog.trigger.ButtonTriggerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.github.rooneyandshadows.lightbulb.pickersdemo.views.DemoAdapterPickerView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>